<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Mahasiswa</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="bootstrap-icons/font/bootstrap-icons.min.css">
    <style>
        .sec-navbar{
            height: 100vh;
        }
        body {
            overflow-x: hidden;
        }
    </style>
</head>
<body>
    <nav class="navbar bg-dark row">
        <div class="container-fluid">
          <span class="navbar-brand mb-3 ms-5 h1 text-white">ABSEN ANAK MAGANG</span>
        </div>
    </nav>
    <div class="row">
        <nav class="col-md-4 nav flex-column bg-dark w-25 sec-navbar">
            <% for (let AKUN of akun) { %>
            <h3 class="ms-5 mb-3 text-white bi-person-circle">   <%= AKUN.username %></h3>
            <% } %>
            <a class="nav-link bi-house-door-fill ms-5" href="dashboard">    Beranda</a>
            <a class="nav-link bi-people-fill ms-5" href="#">    Data Mahasiswa</a>
            <a class="nav-link bi-calendar-fill ms-5" href="#">  Data Absensi</a>
            <a class="nav-link bi-book-fill ms-5" href="#"> Data Kegiatan</a>
            <a class="nav-link bi-person-fill ms-5" href="#"> Administrator</a>
            <a class="nav-link bi-gear-fill ms-5" href="#"> Pengaturan</a>
            <a class="nav-link bi-box-arrow-left ms-5" href="/"> Logout</a>
        </nav>
        <div class="col-md-10 bg-body-secondary w-75">
            <p class="p-3 bi-people-fill">  /   Data Mahasiswa</p>
            <div class="card">
              <div class="card-header p-3 d-flex align-items-center justify-content-between">
                <h5>Data Mahasiswa</h5>
                <div class="input-group w-50">
                  <input type="text" class="form-control" placeholder="Cari">
                  <div class="input-group-prepend">
                    <button class="btn btn-outline-secondary bi-search" type="button"></button>
                  </div>
                </div>
              </div>
            </div>

            <div class="container">
                <h3><%= title %></h3>
                <ul>
                </ul>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nama</th>
                            <th scope="col">Kelas</th>
                            <th scope="col">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let user of users) { %>
                        <tr>
                            <th scope="row"><%= user.id %></th>
                            <th scope="row"><%= user.nama %></th>
                            <th scope="row"><%= user.kelas %></th>
                            <th scope="row"><a href="/edit/<%= user.id %>" class="btn btn-warning edit">Edit</a>
                              <a href="/delete/<%= user.id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">Hapus</a></th>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
                <form action="/tambah" method="post">
                    <h3>TAMBAH ANAK MAGANG BARU</h3>
                    <div class="row mb-3">
                      <label for="nama" class="col-sm-2 col-form-label">Nama</label>
                      <div class="col-sm-10">
                        <input type="text" name="nama" class="form-control" required>
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="kelas" class="col-sm-2 col-form-label">Kelas</label>
                      <div class="col-sm-10">
                        <input type="text" name="kelas" class="form-control" required>
                      </div>
                    </div>
                    <input type="submit" class="btn btn-primary" value="Simpan">
                </form>
            </div>
        </div>
    </div>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>