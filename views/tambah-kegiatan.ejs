<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tambah Kegiatan</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="bootstrap-icons/font/bootstrap-icons.min.css">
</head>
<body>
  <div class="container">
    <form action="/tambah-kegiatan" method="post">
      <h3 class="mt-5">TAMBAH KEGIATAN</h3>
      <div class="row mb-3">
        <label for="id_mahasiswa" class="col-sm-2 col-form-label">Nama Mahasiswa</label>
        <div class="col-sm-10">
          <select class="form-select" name="id_mahasiswa">
            <% mahasiswa.forEach((mhs) => { %>
              <option value="<%= mhs.id %>"><%= mhs.username %></option>
            <% }) %>
          </select>
        </div>
      </div>
      <div class="row mb-3">
        <label for="tanggal" class="col-sm-2 col-form-label">Tanggal Kegiatan</label>
        <div class="col-sm-10">
          <input type="date" name="tanggal" class="form-control" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="awal" class="col-sm-2 col-form-label">Waktu Awal Kegiatan</label>
        <div class="col-sm-10">
          <input type="time" name="awal" class="form-control" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="akhir" class="col-sm-2 col-form-label">Waktu Akhir Kegiatan</label>
        <div class="col-sm-10">
          <input type="time" name="akhir" class="form-control" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="kegiatan" class="col-sm-2 col-form-label">Kegiatan</label>
        <div class="col-sm-10">
          <input type="text" name="kegiatan" class="form-control" required>
        </div>
      </div>
      <input type="submit" class="btn btn-success" value="Simpan">
      <button class="btn btn-warning" type="reset"> Reset</button>
      <a class="btn btn-danger" href="/data-kegiatan"> Batal</a>
    </form>
  </div>
    
    <script src="/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>